<div class="container">
  <div class="bg-light p-5 rounded mt-5 mb-5"> 
    <h2>S'inscrire</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
      <div class="d-flex justify-content-between mt-5 mb-5">
          <%= f.input :first_name, :label => "Prénom" %>
          <%= f.input :last_name, :label => "Nom" %>
      <div class="col-2">
            <%= f.input :phone, :label => "Numéro de téléphone"%>
      </div>
      </div>
      <div class="d-flex justify-content-between mt-5 mb-5">
      <div class="col-3">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, :label => "Mail" %>
      </div>
          <%= f.input :photo, as: :file, :label => "Votre logo de facturation" %>
      </div>
      <div class="d-flex justify-content-between mt-5 mb-5">
          <%= f.input :siret, :label => "Votre numéro Siret" %>
          <%= f.input :address, :label => "Votre adresse de facturation" %>
      </div>
      <div class="d-flex justify-content-between mt-5 mb-5">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" }, :label => "Mot de passe" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" }, :label => "Confirmer votre mot de passe" %>
      </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Inscription", class: "btn btn-success mb-5 mt-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>