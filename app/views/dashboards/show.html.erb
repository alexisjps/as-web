
<div class="container mt-5" data-controller="toggle">
  <div class="d-flex justify-content-center">
    <button data-action="click->toggle#toggle" class="btn btn-primary m-2">
      <i class="bi bi-list"></i> Menu
    </button>
  </div>

  <div id="sidebar" class="sidebar" data-toggle-target="menu">
    <button data-action="click->toggle#disable" class="btn btn-close m-2">
      <i class="bi bi-x"></i>
    </button>
    <div class="d-flex flex-column align-items-start">
      <%= link_to "Factures enregistrées", cloudinary_invoices_invoices_path, class: "btn btn-dark m-2" %>
      <%= link_to "Mes factures", invoices_path, class:"btn btn-success m-2 text-white" %>
      <%= link_to "Mes clients", clients_path, class:"btn btn-info m-2 text-white" %>
      <%= link_to "Mes devis", quotes_path, class:"btn btn-primary m-2 text-white" %>
    </div>
  </div>

  <%# <div id="overlay" class="overlay" data-action="click->toggle#toggle"></div> %>

  <h1>Mon tableau de bord</h1>
  <div class="row mt-5">
    <div class="col-12 col-md-12">
      <h2>Factures du Mois</h2>
      <div data-controller="graph" data-graph-values="<%= @data_for_month_pie_chart.to_json %> €" class="chart-container">
        <div id="chart-month" style="height: 300px;"></div>
      </div>
    </div>
    <!-- <div class="col-12 col-md-6">
      <h2>Factures de l'Année</h2>
      <div data-controller="graph" data-graph-values="<%= @data_for_year_pie_chart.to_json %>" class="chart-container">
        <div id="chart-year" style="height: 300px;"></div>
      </div>
    </div> -->
  </div>
</div>
