<h1>Mes factures sur Cloudinary</h1>

<div data-controller="pdf-modal">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Numéro de facture</th>
        <th>Date</th>
        <th>Client</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.invoice_number %></td>
          <td><%= invoice.date %></td>
          <td><%= invoice.client.denomination %></td>
          <td>
            <%= link_to "Afficher", "#", class: "btn btn-secondary", data: { action: "pdf-modal#show", pdf_url: rails_blob_path(invoice.cloudinary_file) } %>
            <%= link_to "Télécharger", rails_blob_path(invoice.cloudinary_file, disposition: "attachment"), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Modal -->
  <div class="modal fade" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="pdfModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="pdfModalLabel">Facture</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <iframe data-pdf-modal-target="iframe" width="100%" height="500px" frameborder="0"></iframe>
        </div>
      </div>
    </div>
  </div>
</div>
